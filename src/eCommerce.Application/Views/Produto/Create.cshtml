@model eCommerce.Domain.Produto
@{
    ViewData["Teste"] = "Create";
}
<h1>Produto Create</h1>

<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <label asp-for="Nome" class="control-label"></label>
            <input asp-for="Nome" class="form-control" />

            <label asp-for="Tamanho" class="control-label"></label>
            <input asp-for="Tamanho" class="form-control" />

            <label asp-for="Preco" class="control-label"></label>
            <input asp-for="Preco" class="form-control" />

            <label asp-for="QuantidadeDisponivel" class="control-label"></label>
            <input asp-for="QuantidadeDisponivel" class="form-control" />

            <label asp-for="Material" class="control-label"></label>
            <input asp-for="Material" class="form-control" />

            <label asp-for="Cor" class="control-label"></label>
            <input asp-for="Cor" class="form-control" />

            <input type="submit" value="Cadastrar" class="btn btn-primary" />
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>